    },
    {
      "type": "color",
      "id": "decoration_color",
      "label": "Decoration color",
      "default": "#d4c5a9"
    }
  ],
  "presets": [
    {
      "name": "Vintage Soul quote"
    }
  ]
}
{% endschema %}