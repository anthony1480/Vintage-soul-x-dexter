{% doc %}
  @prompt
    generate a box containing a quote spelling what does Vintage Soul mean.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-quote-box-{{ ai_gen_id }} {
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    text-align: {{ block.settings.text_alignment }};
    position: relative;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-quote-box-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
  }

  .ai-quote-box-quote-{{ ai_gen_id }} {
    font-size: {{ block.settings.quote_font_size }}px;
    color: {{ block.settings.quote_color }};
    margin:0 0 {{ block.settings.spacing_between_elements }}px 0;
    line-height:1.4;
    font-style: italic;
  }

  .ai-quote-box-attribution-{{ ai_gen_id }} {
    font-size: {{ block.settings.attribution_font_size }}px;
    color: {{ block.settings.attribution_color }};
    margin: 0;
    font-weight: 600;
  }

  .ai-quote-box-decoration-{{ ai_gen_id }} {
    position: absolute;
    font-size: {{ block.settings.decoration_size }}px;
    color: {{ block.settings.decoration_color }};
    opacity: 0.3;
    z-index: 1;
    font-family: serif;
  }

  .ai-quote-box-decoration-{{ ai_gen_id }}--top-left {
    top: {{ block.settings.decoration_spacing }}px;
    left: {{ block.settings.decoration_spacing }}px;
  }

  .ai-quote-box-decoration-{{ ai_gen_id }}--bottom-right {
    bottom: {{ block.settings.decoration_spacing }}px;
    right: {{ block.settings.decoration_spacing }}px;
    transform: rotate(180deg);
  }

  @media screen and (max-width: 749px) {
    .ai-quote-box-{{ ai_gen_id }} {
      max-width: 100%;
      padding: {{ block.settings.padding | times: 0.8 }}px;
    }

    .ai-quote-box-quote-{{ ai_gen_id }} {
      font-size: {{ block.settings.quote_font_size | times: 0.9 }}px;
    }

    .ai-quote-box-attribution-{{ ai_gen_id }} {
      font-size: {{ block.settings.attribution_font_size | times: 0.9 }}px;
    }

    .ai-quote-box-decoration-{{ ai_gen_id }} {
      font-size: {{ block.settings.decoration_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-quote-box-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.show_decorations %}
    <div class="ai-quote-box-decoration-{{ ai_gen_id }} ai-quote-box-decoration-{{ ai_gen_id }}--top-left">"</div>
    <div class="ai-quote-box-decoration-{{ ai_gen_id }} ai-quote-box-decoration-{{ ai_gen_id }}--bottom-right">"</div>
  {% endif %}

  <div class="ai-quote-box-content-{{ ai_gen_id }}">
    <blockquote class="ai-quote-box-quote-{{ ai_gen_id }}">
      {{ block.settings.quote_text }}
    </blockquote>
    {% if block.settings.attribution != blank %}
      <cite class="ai-quote-box-attribution-{{ ai_gen_id }}">
        {{ block.settings.attribution }}
      </cite>
    {% endif %}
  </div>
</div>

