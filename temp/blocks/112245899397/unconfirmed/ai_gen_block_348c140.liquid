</vintage-soul-text-{{ ai_gen_id }}><script>
  (function() {
    class VintageSoulText{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.activeTimeout = null;
      }

      connectedCallback() {
        this.letterWrappers = this.querySelectorAll('.ai-vintage-soul-text__letter-wrapper-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.letterWrappers.forEach((wrapper) => {
          wrapper.addEventListener('mouseenter', () => {
            this.handleLetterHover(wrapper);
          });

          wrapper.addEventListener('mouseleave', () => {
            this.handleLetterLeave(wrapper);
          });

          wrapper.addEventListener('click', () => {
            this.handleLetterClick(wrapper);
          });
        });document.addEventListener('click', (event) => {
          if (!event.target.closest('.ai-vintage-soul-text__letter-wrapper-{{ ai_gen_id }}')) {
            this.clearActiveStates();
          }
        });
      }

      handleLetterHover(wrapper) {
        const letter = wrapper.getAttribute('data-letter');
        const meaning = wrapper.querySelector('.ai-vintage-soul-text__meaning-{{ ai_gen_id }}');
        
        wrapper.setAttribute('aria-label', `Letter ${letter} - ${meaning.textContent}`);
      }

      handleLetterLeave(wrapper) {
        wrapper.removeAttribute('aria-label');
      }

      handleLetterClick(wrapper) {
        const isMobile = window.innerWidth <= 768;
        
        if (isMobile) {
          this.clearActiveStates();
          wrapper.classList.add('active');
          
          if (this.activeTimeout) {
            clearTimeout(this.activeTimeout);
          }
          
          this.activeTimeout = setTimeout(() => {
            wrapper.classList.remove('active');
          }, 3000);
        }

        const letter = wrapper.querySelector('.ai-vintage-soul-text__letter-{{ ai_gen_id }}');
        letter.style.transform = 'scale(1.2)';
        setTimeout(() => {
          letter.style.transform = '';
        }, 200);
      }

      clearActiveStates() {
        this.letterWrappers.forEach(wrapper => {
          wrapper.classList.remove('active');
        });
        if (this.activeTimeout) {
          clearTimeout(this.activeTimeout);
          this.activeTimeout = null;
        }
      }
    }

    customElements.define('vintage-soul-text-{{ ai_gen_id }}', VintageSoulText{{ ai_gen_id }});
  })();
</script>

