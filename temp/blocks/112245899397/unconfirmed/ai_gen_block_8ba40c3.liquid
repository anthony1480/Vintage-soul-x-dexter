{% doc %}
  @prompt
    generate a box containing a quote spelling what does Vintage Soul mean., actually its a two sentence quote : 
    “V.I.N.T.A.G.E
    "Valuing Individuality, Nurturing Timeless Art, Giving Elegance."           
    
    S.O.U.L – "Sustainable Originals, Uniting Legacy."”, use same fonts of our logo, for vintage soul : sans serif. for explanation hand-written

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-vintage-soul-quote-{{ ai_gen_id }} {
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    text-align: {{ block.settings.text_alignment }};
    position: relative;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-vintage-soul-quote-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
  }

  .ai-vintage-soul-quote-acronym-{{ ai_gen_id }} {
    font-family: 'Arial', 'Helvetica', sans-serif;
    font-size: {{ block.settings.acronym_font_size }}px;
    color: {{ block.settings.acronym_color }};
    font-weight: 700;
    letter-spacing: {{ block.settings.acronym_letter_spacing }}px;
    margin: 0 0 {{ block.settings.spacing_between_lines }}px 0;
    line-height: 1.2;
  }

  .ai-vintage-soul-quote-definition-{{ ai_gen_id }} {
    font-family: 'Brush Script MT', 'Lucida Handwriting', 'Apple Chancery', cursive;
    font-size: {{ block.settings.definition_font_size }}px;
    color: {{ block.settings.definition_color }};
    margin: 0 0 {{ block.settings.spacing_between_sections }}px 0;
    line-height: 1.4;font-style: normal;
  }

  .ai-vintage-soul-quote-soul-section-{{ ai_gen_id }} {
    margin-top: {{ block.settings.spacing_between_sections }}px;
  }

  .ai-vintage-soul-quote-soul-acronym-{{ ai_gen_id }} {
    font-family: 'Arial', 'Helvetica', sans-serif;
    font-size: {{ block.settings.soul_acronym_font_size }}px;
    color: {{ block.settings.soul_acronym_color }};
    font-weight: 700;
    letter-spacing: {{ block.settings.soul_letter_spacing }}px;
    margin: 0 0 {{ block.settings.spacing_between_lines }}px 0;
    line-height: 1.2;
  }

  .ai-vintage-soul-quote-soul-definition-{{ ai_gen_id }} {
    font-family: 'Brush Script MT', 'Lucida Handwriting', 'Apple Chancery', cursive;
    font-size: {{ block.settings.soul_definition_font_size }}px;
    color: {{ block.settings.soul_definition_color }};
    margin: 0;
    line-height: 1.4;
    font-style: normal;
  }

  .ai-vintage-soul-quote-decoration-{{ ai_gen_id }} {
    position: absolute;
    font-size: {{ block.settings.decoration_size }}px;
    color: {{ block.settings.decoration_color }};
    opacity: 0.3;
    z-index: 1;
    font-family: serif;
  }

  .ai-vintage-soul-quote-decoration-{{ ai_gen_id }}--top-left {
    top: {{ block.settings.decoration_spacing }}px;
    left: {{ block.settings.decoration_spacing }}px;
  }

  .ai-vintage-soul-quote-decoration-{{ ai_gen_id }}--bottom-right {
    bottom: {{ block.settings.decoration_spacing }}px;
    right: {{ block.settings.decoration_spacing }}px;
    transform: rotate(180deg);
  }

  @media screen and (max-width: 749px) {
    .ai-vintage-soul-quote-{{ ai_gen_id }} {
      max-width: 100%;
      padding: {{ block.settings.padding | times: 0.8 }}px;
    }

    .ai-vintage-soul-quote-acronym-{{ ai_gen_id }} {
      font-size: {{ block.settings.acronym_font_size | times: 0.9 }}px;
    }

    .ai-vintage-soul-quote-definition-{{ ai_gen_id }} {
      font-size: {{ block.settings.definition_font_size | times: 0.9 }}px;
    }

    .ai-vintage-soul-quote-soul-acronym-{{ ai_gen_id }} {
      font-size: {{ block.settings.soul_acronym_font_size | times: 0.9 }}px;
    }

    .ai-vintage-soul-quote-soul-definition-{{ ai_gen_id }} {
      font-size: {{ block.settings.soul_definition_font_size | times: 0.9 }}px;
    }

    .ai-vintage-soul-quote-decoration-{{ ai_gen_id }} {
      font-size: {{ block.settings.decoration_size | times: 0.8 }}px;
    }
  }
{% endstyle %}<div class="ai-vintage-soul-quote-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.show_decorations %}
    <div class="ai-vintage-soul-quote-decoration-{{ ai_gen_id }} ai-vintage-soul-quote-decoration-{{ ai_gen_id }}--top-left">"</div>
    <div class="ai-vintage-soul-quote-decoration-{{ ai_gen_id }} ai-vintage-soul-quote-decoration-{{ ai_gen_id }}--bottom-right">"</div>
  {% endif %}

  <div class="ai-vintage-soul-quote-content-{{ ai_gen_id }}">
    <div class="ai-vintage-soul-quote-acronym-{{ ai_gen_id }}">
      {{ block.settings.vintage_acronym }}
    </div>
    <div class="ai-vintage-soul-quote-definition-{{ ai_gen_id }}">
      {{ block.settings.vintage_definition }}
    </div>

    <div class="ai-vintage-soul-quote-soul-section-{{ ai_gen_id }}">
      <div class="ai-vintage-soul-quote-soul-acronym-{{ ai_gen_id }}">
        {{ block.settings.soul_acronym }}
      </div>
      <div class="ai-vintage-soul-quote-soul-definition-{{ ai_gen_id }}">
        {{ block.settings.soul_definition }}
      </div>
    </div>
  </div>
</div>

