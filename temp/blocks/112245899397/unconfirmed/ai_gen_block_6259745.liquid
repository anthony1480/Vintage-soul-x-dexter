{% doc %}
  @prompt
    i want to generate a liquid to insert a quote, telling what it VINTAGE SOUL, what each letter means, to spell our brand, design to be interactive

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-vintage-soul-quote-{{ ai_gen_id }} {
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    text-align: center;
    max-width: 100%;
  }

  .ai-vintage-soul-quote__header-{{ ai_gen_id }} {
    margin-bottom: 30px;
  }

  .ai-vintage-soul-quote__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 10px;
    font-weight: 600;
  }

  .ai-vintage-soul-quote__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-vintage-soul-quote__letters-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: {{ block.settings.letter_spacing }}px;
    margin-bottom: 30px;
  }

  .ai-vintage-soul-quote__letter-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border: 2px solid {{ block.settings.card_border }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: 20px;
    min-width: 120px;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .ai-vintage-soul-quote__letter-card-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.card_hover_background }};
    border-color: {{ block.settings.card_hover_border }};
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .ai-vintage-soul-quote__letter-{{ ai_gen_id }} {
    font-size: {{ block.settings.letter_size }}px;
    font-weight: 700;
    color: {{ block.settings.letter_color }};
    margin: 0 0 8px;
    display: block;
  }

  .ai-vintage-soul-quote__letter-card-{{ ai_gen_id }}:hover .ai-vintage-soul-quote__letter-{{ ai_gen_id }} {
    color: {{ block.settings.letter_hover_color }};
  }

  .ai-vintage-soul-quote__meaning-{{ ai_gen_id }} {
    font-size: {{ block.settings.meaning_size }}px;
    color: {{ block.settings.meaning_color }};
    margin: 0;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
  }

  .ai-vintage-soul-quote__letter-card-{{ ai_gen_id }}:hover .ai-vintage-soul-quote__meaning-{{ ai_gen_id }} {
    opacity: 1;
    transform: translateY(0);color: {{ block.settings.meaning_hover_color }};
  }

  .ai-vintage-soul-quote__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
    max-width: 600px;
    margin: 0auto;
  }

  @media screen and (max-width: 768px) {
    .ai-vintage-soul-quote__letters-{{ ai_gen_id }} {
      gap: {{ block.settings.letter_spacing | divided_by: 2 }}px;
    }

    .ai-vintage-soul-quote__letter-card-{{ ai_gen_id }} {
      min-width: 80px;
      padding: 15px;
    }

    .ai-vintage-soul-quote__letter-{{ ai_gen_id }} {
      font-size: {{ block.settings.letter_size | times: 0.8 }}px;
    }

    .ai-vintage-soul-quote__meaning-{{ ai_gen_id }} {
      font-size: {{ block.settings.meaning_size | times: 0.9 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-vintage-soul-quote__letters-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: center;
    }

    .ai-vintage-soul-quote__letter-card-{{ ai_gen_id }} {
      width: 100%;
      max-width: 200px;
    }
  }
{% endstyle %}

