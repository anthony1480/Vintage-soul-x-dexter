</vintage-soul-quote-{{ ai_gen_id }}><script>
  (function() {
    class VintageSoulQuote{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.letterCards = this.querySelectorAll('.ai-vintage-soul-quote__letter-card-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.letterCards.forEach((card) => {
          card.addEventListener('mouseenter', () => {
            this.handleCardHover(card);
          });

          card.addEventListener('mouseleave', () => {
            this.handleCardLeave(card);
          });

          card.addEventListener('click', () => {
            this.handleCardClick(card);
          });
        });
      }

      handleCardHover(card) {
        const letter = card.getAttribute('data-letter');
        card.setAttribute('aria-label', `Letter ${letter} - hover to see meaning`);
      }

      handleCardLeave(card) {
        card.removeAttribute('aria-label');
      }

      handleCardClick(card) {
        const meaning = card.querySelector('.ai-vintage-soul-quote__meaning-{{ ai_gen_id }}');
        const letter = card.getAttribute('data-letter');
        
        card.style.transform = 'scale(1.05)';
        setTimeout(() => {
          card.style.transform = '';
        }, 200);

        if (meaning) {
          meaning.style.opacity = '1';
          meaning.style.transform = 'translateY(0)';
          
          setTimeout(() => {
            meaning.style.opacity = '';
            meaning.style.transform = '';
          }, 2000);
        }
      }
    }

    customElements.define('vintage-soul-quote-{{ ai_gen_id }}', VintageSoulQuote{{ ai_gen_id }});
  })();
</script>

